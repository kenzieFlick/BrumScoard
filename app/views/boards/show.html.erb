<div class="column">
    <h2>Product Backlog</h2>
    <% current_board.stories.each do |story|%>
        <div class="card">

            <% if !story.description.blank? %>
                <div class="info">
                    <%= story.description %>
                </div>
            <% end %>

            <% if !story.want.blank? %>
                <div class="info">
                    <%= "As " + story.as + ", I want " + story.want + " so that " + story.so_that %>
                </div>
            <% end %>

            <% if !story.criteria.blank? %>
                <div class="info">
                    <%= 'Acceptance criteria: ' + story.description %>
                </div>
            <% end %>

            <% if !story.size.blank? %>
                <div class="info">
                    <%= 'Size estimate: ' + story.size %>
                </div>
            <% end %>

        </div>
    <% end%>
</div>

